    font-weight: 500;
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: var(--text-primary);
    opacity: 1;
  }

  .nav-cta {
    background: var(--accent);
    color: var(--bg-primary) !important;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-weight: 600;
  }

  .nav-cta:hover {
    background: var(--accent-dim);
  }

  @media (max-width: 768px) {
    nav {
      padding: 1rem;
    }

    .nav-links {
      display: none;
    }
  }
